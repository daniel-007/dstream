// MemCopy returns a Dstream that copies the provided Dstream into
// in-memory storage.
func MemCopy(data Dstream) Dstream {

	nvar := data.NumVar()
	bdata := make([][]interface{}, nvar)

	data.Reset()
	for data.Next() {
		for j := 0; j < nvar; j++ {
			var y interface{}
			v := data.GetPos(j)
			switch v := v.(type) {
			    {{- range . }}
                    case []{{ .Type }}:
				        z := make([]{{ .Type }}, len(v))
				        copy(z, v)
				        y = z
			    {{- end }}
			}
		    bdata[j] = append(bdata[j], y)
		}
	}

	da := &DataFrame{
		data: bdata,
		xform: xform{
			names: data.Names(),
		},
	}

	da.init()

	return da
}
